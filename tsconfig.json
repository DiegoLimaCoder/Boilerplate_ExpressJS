{
  "compilerOptions": {
    "lib": [
      "ES2023"
    ],
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "target": "ES2023",
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "include": ["src/**/*.ts","src", "test"]
}