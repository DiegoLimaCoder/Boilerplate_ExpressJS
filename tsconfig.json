{
  "compilerOptions": {
    "lib": [
      "ES2023"
    ],
    "types": ["vitest/globals"],
    "rootDir": "./",
    "outDir": "dist",
    "baseUrl": ".",
    "target": "ES2023",
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks":true,
    "sourceMap":true,
    "noImplicitAny": true,
    "removeComments": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "include": ["src/**/*.ts","src", "test"],
  "exclude": ["node_modules", "dist"]
}